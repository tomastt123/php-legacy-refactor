{
	"compilerOptions": {
		"module": "Node16",
		"moduleResolution": "Node16",
		"target": "ES2022",
		"lib": ["ES2022", "DOM", "DOM.Iterable"],
		"sourceMap": true,
		"rootDir": "src",
		"outDir": "out",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		},
		"include": ["src"],
		"exclude": ["node_modules", "src/**/__tests__/*"]
}
